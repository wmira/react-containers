{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": true,
            "destructuring": true,
            "modules": true,
            "blockBindings": true,
            "forOf": true,
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "plugins": [ "react" ],
    "rules": {
        "brace-style": [2, "1tbs"],
        "comma-style": 2,
        "curly": [2, "multi-line"],
        "indent": 2,
        "no-unused-expressions": 0,
        "no-underscore-dangle": 0,
        "quotes": [2, "single", "avoid-escape"],
        "eqeqeq": 2,
        "strict": 2,
        "no-undef": 2,
        "no-unused-vars": [2, {"vars": "all", "args": "after-used"}],
        "react/jsx-no-undef": 2,        
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/react-in-jsx-scope": 2,
        "react/prop-types": 2,
        "semi": 2,
        "space-before-blocks": 2,
        "keyword-spacing": 2,
        "space-in-parens": 0,
        "no-multiple-empty-lines": "error",
        "no-trailing-spaces": "error"
    }
}
